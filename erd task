# Write your MySQL query statement below
SELECT tweet_id 
FROM Tweets 
WHERE LENGTH(content) > 15;
4-
UPDATE salary
SET sex = CASE 
    WHEN sex = 'm' THEN 'f' 
    WHEN sex = 'f' THEN 'm' 
END;
or
UPDATE salary
SET
    sex = CASE sex
        WHEN 'm' THEN 'f'
        ELSE 'm'
    END;
